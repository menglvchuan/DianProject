<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20"
    app:cardCornerRadius="@dimen/dp_12">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/sp_10"
        android:orientation="vertical"

        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"

        android:paddingBottom="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/addr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="111"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/addr_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="111"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/addr_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="12431234143241"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#f2f2f2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:text="设为默认地址"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <Button
                    android:id="@+id/text_updata"
                    android:layout_width="@dimen/dp_40"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/dp_20"
                    android:text="修改"
                    android:background="@drawable/addr_btn_shape"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_10" />

                <Button
                    android:id="@+id/text_delete"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:text="删除"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@drawable/addr_btn_shape"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
